#!/usr/bin/env bash

set -e

# install major applications with homebrew
if test ! $(which brew); then
  echo "Installing homebrew..."
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# setup hostname
sudo scutil --set HostName david-macbook

# install all
set +e
brew bundle
set -e

# setup workspace
mkdir -p ~/dev
mkdir -p ~/work

# init git
cp ./git/work.gitconfig ~/work/.gitconfig
cp ./git/global.gitconfig ~/.gitconfig

# make zsh default
sudo sh -c 'echo /usr/local/bin/zsh >> /etc/shells'
chsh -s $(which zsh)
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# setup dotfiles
cp .bash_profile .zshrc .bashrc .gemrc ~/

# fzf
$(brew --prefix)/opt/fzf/install

# neovim
./neovim/neovim

# link to sublime & vscode
mkdir -p ~/Applications/
sudo ln -s /Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl
sudo ln -s /Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code /usr/local/bin/code

# ruby
gem install bundler
bundle config mirror.https://rubygems.org https://gems.ruby-china.com

# go
mkdir -p ~/go

# shadowsocks
mkdir -p ~/.ShadowsocksX-NG
cp ./Shadowsocks/user-rule.txt ~/.ShadowsocksX-NG/

# sync folder
mkdir -p ~/sync

# macOS setups
./mac
