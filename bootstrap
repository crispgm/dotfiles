#!/usr/bin/env bash

set -e

echo "Install Homebrew"
if test ! $(which brew); then
    echo "Installing homebrew..."
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

echo "Setup hostname"
sudo scutil --set HostName david-macbook

echo "Install with Brew Bundle"
set +e
brew bundle
set -e

echo "Setup workspace"
mkdir -p ~/dev
mkdir -p ~/work

echo "Setup Git"
cp ./git/work.gitconfig ~/work/.gitconfig
cp ./git/global.gitconfig ~/.gitconfig

echo "Setup Bash"
sudo cp ./motd /etc/motd
cp ./bash/.bashrc ~/.bashrc
cp ./bash/.bash_profile ~/.bash_profile

echo "Setup Zsh"
sudo sh -c 'echo /usr/local/bin/zsh >> /etc/shells'
sudo chsh -s $(which zsh)
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"
cp ./zsh/crispy.zsh-theme ~/.oh-my-zsh/themes/
cp ./zsh/.zshrc ~/

echo "Setup macOS defaults"
./mac

echo "Create ~/Applications"
mkdir -p ~/Applications/
