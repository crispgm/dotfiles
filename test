#!/usr/bin/env bash

set -e

echo "Test hostname"
HOSTNAME=`hostname`
test $HOSTNAME = "david-macbook"

echo "Test brews"
test -x `which git`
test -x `which nvim`

echo "Test folders"
test -d ~/dev
test -d ~/work

echo "Test zsh/oh-my-zsh"
test -x `which zsh`
test -d ~/.oh-my-zsh

echo "Test Git"
GIT_NAME=`git config --global --get user.name`
test "$GIT_NAME" = "David Zhang"

echo "Test applications"
test -x `which ruby`
test -x `which bundle`
test -x `which go`
test -d ~/go
