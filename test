# !/usr/bin/env bash

set -e

echo "Test hostname"
HOSTNAME=`hostname`
test $HOSTNAME = "david-macbook"

echo "Test brews"
test -x git
test -x nvim

echo "Test folders"
test -d ~/dev
test -d ~/work

echo "Test zsh/oh-my-zsh"
test -x zsh
test -d ~/.oh-my-zsh

echo "Test Git"
GIT_NAME=`git config --global --get user.name`
test $GIT_NAME = "David Zhang"

echo "Test other applications"
test -x wget
test -x ruby
test -x go
test -x fzf
test -x rg
test -x sqlite3
