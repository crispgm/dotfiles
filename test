# !/usr/bin/env bash

set -e

# Test hostname
HOSTNAME=`hostname`
test $HOSTNAME = "david-macbook"

# Test brews
test -x git
test -x nvim

# Test folders
test -d ~/dev
test -d ~/work

# Test zsh/oh-my-zsh
test -x zsh
test -d ~/.oh-my-zsh

# Test Git
GIT_NAME=`git config --global --get user.name`
test $GIT_NAME = "David Zhang"
